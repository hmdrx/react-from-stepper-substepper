{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "lib": ["ES6", "DOM"],
    "module": "ES2015",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
